# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roto_db
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
GLOBAL_RATE_LIMIT=1000
LEADERBOARD_RATE_LIMIT=100
ADMIN_RATE_LIMIT=10

# Cache Configuration
CACHE_EXPIRY=300
TOP_PLAYERS_CACHE_LIMIT=1000

# Leaderboard Configuration
SIGNIFICANT_RANK_CHANGE_THRESHOLD=5
MAX_LEADERBOARD_PAGE_SIZE=100
DEFAULT_LEADERBOARD_PAGE_SIZE=50

# Season Configuration
SEASON_TRANSITION_CHECK_INTERVAL=3600000
AUTO_SEASON_TRANSITIONS=true

# Performance Monitoring
SLOW_QUERY_THRESHOLD=1000
ENABLE_PERFORMANCE_LOGGING=true

# External Services (if applicable)
NOTIFICATION_SERVICE_URL=
ANALYTICS_SERVICE_URL=