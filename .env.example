# Environment Configuration
NODE_ENV=development
PORT=3000

# Railway Production Settings (Railway will auto-populate these)
RAILWAY_PUBLIC_DOMAIN=your-app-name.railway.app

# PostgreSQL Database (Railway will provide these automatically)
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=host
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name

# Security Settings
SESSION_SECRET=your-super-secret-session-key-here
JWT_SECRET=your-jwt-secret-here

# Rate Limiting
RATE_LIMIT_POINTS=10
RATE_LIMIT_DURATION=1

# CORS Settings (comma-separated list for production)
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info

# Game Settings
ROOM_TIMEOUT_MINUTES=30
MAX_ROOM_ID_LENGTH=20
MAX_CONCURRENT_ROOMS=1000