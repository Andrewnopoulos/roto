# Environment Configuration for Roto Backend
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roto_game
DB_USER=postgres
DB_PASSWORD=your_password_here

# For production, use connection string format:
# DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this_too
REFRESH_TOKEN_EXPIRES_IN=30d

# Redis Configuration (for session storage and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_change_this_in_production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For multiple origins: CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Game Configuration
DEFAULT_GAME_TIMEOUT=1800000
MAX_PLAYERS_PER_GAME=8
ROOM_CODE_LENGTH=6

# Email Configuration (for user verification, password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@roto.game
FROM_NAME=Roto Game Platform

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/roto-backend.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090

# Development/Testing Configuration
ENABLE_DEBUG_ROUTES=false
ENABLE_CORS_CREDENTIALS=true

# External API Keys (if needed)
EXTERNAL_API_KEY=your_external_api_key_here

# Websocket Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem